//  Written by Ryan C. Gordon.
//----------------------------------------------------

function main() returns nothing
	number i
	triforce(150)
endfunction


function triForce(number size) returns nothing
	setAngle(-90)
	doTriangle(size)
	
endfunction

function doTriangle(number size) returns number
	number i

	i = 1

	while (i <= 3)
		i = i + 1
		goForward(size)
		turnRight(360 / 3)
	endwhile
endfunction



